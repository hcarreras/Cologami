div class="page-header"
  h1 Shapes and Designs
- @shapes.each do |shape|
  .panel.panel-default
    .panel-heading= link_to shape.title.titleize, edit_admin_shape_path(shape)
    .panel-body
      table class="table table-striped"
        thead
          tr
            th Title
            th Price
            th Description
            th images
            th Actions
        tbody
          - shape.designs.each do |design|
            tr
              td= link_to design.title, design_path(design)
              td= design.price
              td= design.description
              td
                - design.images.each do |image|
                  = image_tag(image.file_url(:thumb))
              td
                = link_to 'Edit', edit_admin_design_path(design), :class => 'btn btn-mini'
                '
                = link_to 'Destroy', admin_design_path(design), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class: 'btn btn-mini btn-danger'
      p
        = link_to "New Design", new_admin_design_path(shape_id: shape), :class => 'btn btn-primary'
p
  = link_to "New Shape", new_admin_shape_path, :class => 'btn btn-primary'

